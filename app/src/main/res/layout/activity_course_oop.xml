<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/course_image_oop"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/for_course"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:contentDescription="@string/course_image_oop_description" />

    <TextView
        android:id="@+id/course_title_oop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_title_oop"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/course_image_oop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/course_title_oop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_description_oop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_description_oop"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/course_content_oop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/course_content_oop"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/course_additional_info_oop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/course_additional_info_oop"
                android:textSize="14sp" />

            <!-- Пример кода ООП -->
            <TextView
                android:id="@+id/course_code_example_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_code_example_title"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/course_code_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/course_code_example"
                android:background="#F0F0F0"
                android:padding="8dp"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>